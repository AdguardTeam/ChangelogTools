{
  "name": "@adguard/changelog-tools",
  "version": "0.0.1",
  "description": "Tools for working with changelogs",
  "author": "AdGuard Software Ltd.",
  "license": "MIT",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AdguardTeam/ChangelogTools.git"
  },
  "bugs": {
    "url": "https://github.com/AdguardTeam/ChangelogTools/issues"
  },
  "homepage": "https://github.com/AdguardTeam/ChangelogTools#readme",
  "bin": "dist/cli/bin.js",
  "main": "dist/lib/index.js",
  "module": "dist/lib/index.js",
  "types": "dist/types/lib/index.d.ts",
  "exports": {
    "./lib": {
      "types": "./dist/types/lib/index.d.ts",
      "import": "./dist/lib/index.js",
      "default": "./dist/lib/index.js"
    }
  },
  "files": [
    "dist/**",
    "!dist/build.txt"
  ],
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "rollup --config rollup.config.ts --configPlugin typescript && tsx scripts/transform-dts.ts",
    "check-types": "tsc",
    "clean": "rimraf dist",
    "coverage": "vitest --coverage",
    "lint": "pnpm check-types && pnpm lint:code && pnpm lint:md",
    "lint:md": "markdownlint-cli2 --config .markdownlint-cli2.jsonc",
    "lint:code": "eslint . --cache --ext .ts --ext .js",
    "prepare": "node .husky/install.js",
    "increment": "pnpm version patch --no-git-tag-version",
    "test": "vitest"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.2",
    "@rollup/plugin-json": "^6.0.0",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-replace": "^6.0.3",
    "@rollup/plugin-typescript": "^12.1.2",
    "@types/mdast": "^4.0.0",
    "@types/node": "^22.19.1",
    "@typescript-eslint/eslint-plugin": "^5.60.1",
    "@typescript-eslint/parser": "^5.60.1",
    "@vitest/coverage-v8": "4.0.15",
    "ci-info": "^4.0.0",
    "eslint": "^8.57.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-plugin-boundaries": "^5.0.1",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-import-newlines": "^1.3.1",
    "eslint-plugin-jsdoc": "^46.3.0",
    "eslint-plugin-n": "^17.23.1",
    "husky": "^9.0.7",
    "jsdoc": "^4.0.2",
    "lint-staged": "^16.2.0",
    "markdownlint": "^0.39.0",
    "markdownlint-cli2": "^0.18.1",
    "rimraf": "^6.1.2",
    "rollup": "^4.41.0",
    "rollup-plugin-node-externals": "^6.1.1",
    "ts-morph": "^27.0.2",
    "tsc-files": "^1.1.4",
    "tsx": "^4.7.0",
    "typescript": "^5.8.3",
    "vitest": "^4.0.15"
  },
  "dependencies": {
    "commander": "^14.0.2",
    "escape-string-regexp": "^5.0.0",
    "remark-inline-links": "^7.0.0",
    "remark-parse": "^11.0.0",
    "remark-stringify": "^11.0.0",
    "unified": "^11.0.5"
  }
}
